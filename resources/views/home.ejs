
    <!-- Main Header Start -->

    <section class="header py-10">
        <div class = "container mx-auto flex items-center justify-between">
            <div class = "ml_100 w-1/2"> 
                <h6 class = "text-lg my-2"><em>Are You Hungry</em></h6>
                <h1 class = "text-6xl font-bold">Why To Wait !</h1>
                
                <div class="field">
                    <a class="sns-btn"> Order Now
                        <i class="sns-btn__icon"></i>
                    </a>
                </div>

            </div>
            <div class = "w-1/2">
                <img class = "header_img" src="/img/hero-pizza2.png" alt="">
            </div>
        </div>
    </section>

     <!-- Main Header End -->


      <!-- Pizza Menu Start -->

    <section class="menu container mx-auto py-8 ">
        <h1 class=" ml_100 text-2xl font-bold">All Pizza's</h1>
        <div class="ml_100 mt_30 grid grid-cols-4 row-gap">
            
            
            <% pizzas.forEach(function(pizza){ %>

                <div class="w-64 text-center card">
                    <img class="mx-auto h-40 mb-4" src="/img/<%= pizza.image %>" alt="">
                    <div>
                        <h2 class=" mb-4 text-lg"><%= pizza.name %></h2>
                        <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                        <div class = "flex items-center justify-around mt-6">
                            <span class="font-bold text-lg">₹<%= pizza.price %></span>
                            <button class="glow-on-hover py-1 px-6 rounded-full flex items-center font-bold">
                                <span>+</span>
                                <span class="ml-4">Add</span>
                            </button>
                        </div>
                    </div>
                </div> 

         <% }) %>
            
